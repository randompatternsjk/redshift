---
// Hero.astro
import Logos from '../components/Logos.astro';
---

<section class="my-auto relative min-h-screen max-h-screen flex flex-col justify-center gap-4">
  <!-- Full bleed image -->
  <div class="flex items-center w-screen justify-center">
    <img
      src="/images/redshift_album_art.webp"
      alt="Album Art"
      class="lg:max-w-4xl lg:max-h-2xl md:max-h-1/3 object-cover mx-auto shadow-moonglow"
    />
  </div>

  <!-- Logos -->
  <div class="flex items-start justify-center mx-8 my-8">
    <Logos />
  </div>
</section>

