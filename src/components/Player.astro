---
// Nav.astro
---

<section id="player-container" class="fixed z-1 w-screen flex justify-center items-center pr-8">
  <div class="w-full h-auto backdrop-blur-md flex relative">
    <button
      onclick="document.getElementById('player-container').style.display = 'none';"
      class="absolute top-2 right-2 text-white bg-cyan-500 rounded-full w-6 h-6 flex items-center justify-center hover:bg-red-600 transition"
      aria-label="Close"
    >
      &times;
    </button>
    <iframe
      style="border: 0; width: 100%; max-width: 600px; height: 42px;"
      src="https://bandcamp.com/EmbeddedPlayer/album=1797150013/size=small/bgcol=333333/linkcol=4ec5ec/artwork=none/transparent=true/"
      seamless
    >
      <a href="https://theokaylakes.bandcamp.com/album/redshift">Redshift by The
      Okay Lakes</a>
    </iframe>
  </div>

  <button
    onclick="window.open('https://listen.theokaylakes.com/redshift', '_blank', 'noopener,noreferrer')"
    class="inline-block mt-6 px-4 py-2 bg-cyan-500 text-white font-semibold rounded hover:bg-cyan-600 transition"
  >
    Stream
  </button>
</section>
